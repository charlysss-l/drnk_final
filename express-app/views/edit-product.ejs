<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageTitle%>
    </title>
    <link href="/css/navbar.css" rel="stylesheet">
    <link href="../public/css/product_container.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" 	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>

    <body>
        <!--used to include navigation.ejs-->
        <%- include('./layouts/navigation_admin.ejs')%>

            <!-- Page Content -->
            <div class="container">
                <div class="row">

                    <div class="col-lg-9">

                        <div class="row">
                            <div class="col-sm-12">
                                <h2>Edit Product</h2>
                                <!--Form where admin add products-->
                                <form action="/admin/edit-product" method="POST">
                                    <input type="hidden" name="id" value="<%=product.id%>">
                                    <div class="form-group">
                                        <label for="product">Edit Product</label>
                                        <input class="form-control" id="product" name="product" , value="<%=product.product%>">
                                    </div>
                                    <div class="form-group">
                                        <label for="price">Price</label>
                                        <input class="form-control" id="price" name="price" , value="<%=product.price%>">
                                    </div>
                                    <div class="form-group">
                                        <label for="volume">Volume</label>
                                        <input class="form-control" id="volume" name="volume" , value="<%=product.volume%>">
                                    </div>
                                    <div class="form-group">
                                        <label for="brand">Brand</label>
                                        <input class="form-control" id="brand" name="brand" , value="<%=product.brand%>">
                                    </div>
                                    <div class="form-group">
                                        <label for="sku">SKU</label>
                                        <input class="form-control" id="sku" name="sku" , value="<%=product.sku%>">
                                    </div>
                                    <div class="form-group">
                                        <label for="imageURL">Image URL</label>
                                        <input class="form-control" id="imageURL" name="imageURL" , value="<%=product.imageURL%>">
                                    </div>
                                    <button type="submit" class="btn btn-primary ">Submit</button>
                                </form>
                                <br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--used to include end.ejs-->
            <%- include('layouts/end.ejs')%>