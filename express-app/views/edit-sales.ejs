<%- include('layouts/head.ejs')%>

<body>
    <!-- Include navigation -->
    <%- include('./layouts/navigation_admin.ejs')%>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-sm-12">
                        <h2>Edit Sales</h2>
                        <!-- Form to edit sales -->
                        <form action="/admin/admin-sales" method="POST">
                            <input type="hidden" name="id" value="<%= sale.id %>">
                            <div class="form-group">
                                <label for="product_name">Product Name</label>
                                <input class="form-control" id="product_name" name="product_name" value="<%= sale.product_name %>">
                            </div>
                            <div class="form-group">
                                <label for="total_sales">Total Sales</label>
                                <input class="form-control" id="total_sales" name="total_sales" value="<%= sale.total_sales %>">
                            </div>
                            <div class="form-group">
                                <label for="date">Date</label>
                                <input class="form-control" id="date" name="date" value="<%= sale.date %>">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Include footer -->
    <%- include('layouts/end.ejs')%>